{
    "extends": "standard",
    "rules": {
        "semi": ["off", "always"],
        "indent": ["error", 4],
        "one-var": ["off"],
        "linebreak-style": ["error", "unix"],
        "no-var": ["off"],
        "quote-props": ["off"],
        "prefer-const": ["off"],
        "object-curly-spacing": ["off"],
        "no-empty": ["off"],
        "array-bracket-spacing": ["off"],
        "object-shorthand": ["off"]
    },
    "env": {
        "browser": true,
        "jquery": true
    },
    "globals": {
        "Tabulator": true,
        "md5": true,
        "hex_sha512": true,
        "previewText": true,
        "GameSearch": true,
        "Chart": true,
        "$JssorSlideshowRunner$": true,
        "$JssorArrowNavigator$": true,
        "$JssorBulletNavigator$": true,
        "$JssorThumbnailNavigator$": true,
        "$JssorSlider$": true
    }
}
