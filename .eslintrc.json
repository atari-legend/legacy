{
    "extends": "standard",
    "rules": {
        "semi": ["off", "always"],
        "indent": ["error", 4],
        "one-var": ["off"],
        "linebreak-style": ["error", "unix"]
    },
    "env": {
        "browser": true,
        "jquery": true
    },
    "globals": {
        "Tabulator": true,
        "md5": true,
        "hex_sha512": true,
        "previewText": true
    }
}
